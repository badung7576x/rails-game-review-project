
<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first">
      <img src="https://i.pinimg.com/originals/72/3d/0a/723d0af616b1fe7d5c7e56a3532be3cd.png" id="icon" alt="User Icon" />
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "fadeIn second", id: "login", placeholder: "メールアドレス" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, class: "fadeIn third", id: "password", placeholder: "パスワード" %>
      </div>
    
      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->
    
      <div class="actions">
        <%= f.submit "ログイン", class: "fadeIn fourth" %>
      </div>
    <% end %>
  </div>
</div>
